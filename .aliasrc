    if [ "$(id -u)" != "0" ]; then
        echo -e '      to delete \e[38;2;242;29;0m'"$*"'\e[0m press (y/n) or Enter: '
        stty -echo
        read -r r
        stty echo
        echo
        if [[ "$r" =~ ^[Yy]$ ]] || [[ "$r" == "" ]]; then
            sudo /bin/rm -vr "$@"
        else
            echo "Deletion cancelled"
        fi
    else
        /bin/rm -vr "$@"
    fi
}

