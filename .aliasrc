    # Colormap
    for i in {0..255}; do
        print -Pn "%K{$i}  %k%F{$i}$(printf "%03d" "$i")%f "
        if [[ "$((i % 6))" -eq 3 ]]; then
            print -P $'\n'
        fi
    done
}
colorcode_() {
    # Colorcode
    for i in {0..255}; do
        printf "\x1b[38;5;${i}mcolor%-5i\x1b[0m" "$i"
        if ! ((("$i" + 1) % 8)); then echo; fi
    done
}

