aa() {
    # AI
    # https://github.com/deepseek-ai/DeepSeek-R1
    # https://ollama.com/library/deepseek-r1:8b
    # 7b default
    # ollama run deepseek-r1:7b
    # alternative: https://console.groq.com/playground

    model="F7"
    inxi=$(inxi -M)
    pkg="ollama"
    r1="deepseek-r1:8b" # 4.7GB

    # get ollama
    if ! pacman -Qq $pkg >/dev/null; then
        sudo pacman --noconfirm -Syu $pkg || echo "error getting $pkg" && exit
    fi

    # status check
    if systemctl status ollama | grep "inactive"; then

        echo "$pkg is disable, enable now.. "
        if ! systemctl enable --now "$pkg"; then
            echo "Failed to enable $pkg"
            exit 1
        fi

        # Check if service is still inactive after enabling
        if systemctl status ollama | grep "inactive)"; then
            echo "$pkg error"
            exit 1
        fi
    fi

    # Run model
    if [[ "$inxi" == *"$model"* ]]; then
        "$pkg" run deepseek-r1:1.5b
    else
        "$pkg" run "$r1"
    fi
}
