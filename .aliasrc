pacman-update() {
    # Systemupdate
    os=$(cat /etc/arch-release)

    if grep -q "Manjaro" /etc/arch-release; then

        sudo pacman-mirrors -a -P https --fasttrack 11 &&
            sudo pacman -Syu --disable-download-timeout

    elif [[ $os == "Arch Linux"* ]]; then
        sudo pacman -Syu --disable-download-timeout

    elif [[ $os == "endeavour"* ]]; then

        eos-rankmirrors
        sudo pacman -Syu --disable-download-timeout

    else
        echo -n "Unknown OS"
        for ((i = 1; i <= 3; i++)); do
            echo -n "."
            sleep 1
        done
        echo ""
        echo "Cancel update"
    fi

}
