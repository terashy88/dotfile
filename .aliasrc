    # Define my_touch function to create directories and files
    for arg in "$@"; do
        if [[ -n "${arg}" ]]; then
            mkdir -p "$(dirname "${arg}")" && command touch "${arg}" && ls -ld "${arg}"
        else
            echo "Invalid argument: ${arg}"
        fi
