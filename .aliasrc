rrestoreBackup() {
    # Daily test

    # Define backup-related variables
    bak=".bak"
    testFile=""

    backup=""
    revert=""
    del="$revert" # Delete action is to remove the .bak file

    # Ensure we're in home directory
    if [ "$PWD" != "$HOME" ]; then
        cd "$HOME" || exit 1
    fi

    # Confirm deletion of the backup file
    if [[ -e "$del" ]]; then

        echo "Are you sure you want to Delete: $del ?"
        printf "    y = yes \n  or \n   n = no? "

        while true; do

            read -r r

            clear
            sleep 0.4
            case $r in
            Y | y)
                rm "$del" && echo "Deleted: $del" || exit 1
                exit 0
                ;;
            n | N)
                echo ""
                echo "$del will not be deleted."
                exit 1
                ;;
            *)
                if [[ $r == "" ]]; then
                    echo "there was no input..."
                else
                    echo ""
                    echo "The input $r was not correct"
                    sleep 0.3
                    echo " To delete $del please press:"
                    sleep 0.3
                    printf "    [ y ] = yes or [ n ] = no...\n"
                fi
                ;;
            esac
        done
    fi

    # Perform backup
    if [[ -e $backup ]]; then
        {
            mv "$backup" "$backup$bak"
        } || {
            echo "Could not move $backup to $backup$bak"
            exit 1
        }
        echo "$backup is now at $backup$bak"
        exit 0
    else
        echo "There is no $backup file..."
    fi

    # Revert if backup was successful (fail-safe)
    if [[ -e $revert ]]; then

        mv "$revert" "$testFile" || {
            echo "Could not revert to $testFile"
            exit 1
        }
        echo "$revert is now at $testFile"
        return 0
    fi
}

