f() {
    # File Manager
    m="nemo"
    m2="thunar"

    # alternative Manager
    if [[ ! -x "$(command -v "$m")" ]] && [[ ! -x "$(command -v "$m2")" ]]; then
        echo "File Manager don't exist"
        exit 1
    elif [[ ! -x "$(command -v "$m")" ]]; then
        m=$m2
    fi

    # Permission / input check
    if [[ ! -e "$1" ]]; then
        ## help correct this logic ##
        if [[ "$m" && "$1" ]]; then
            echo "$1 does not exist"
            exit 1
        else
            $m
        fi
    else
        if [ "$(id -u)" != "$(stat -c %u "$1")" ]; then
            if [[ -x $(which "$1") ]]; then
                echo "$1 does not exist"
                exit 1
            else
                sudo $m "$1"
            fi
        else
            if [[ -x $(which "$1") ]]; then
                echo 1
                echo "$1 does not exist"
                exit 1
            else
                $m "$1"
            fi
        fi
    fi
}

